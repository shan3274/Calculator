<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"

        android:orientation="vertical">
    <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:textSize="48sp"
            android:textColor="@color/black"
            android:maxLength="12"
            android:gravity="right|center_vertical|bottom"
            android:background="#efefef"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                    android:id="@+id/seven"
                    android:onClick="Click"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="7"
                    android:textColor="@color/black"
                    android:backgroundTint="#BCBCBC"/>
            <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/eight"
                android:onClick="Click"
                android:text="8"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>
            <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/nine"
                android:onClick="Click"
                android:text="9"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/divide"
                android:onClick="cal"
                android:text="/"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <Button
                android:id="@+id/four"
                android:onClick="Click"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="4"
                android:textColor="@color/black"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/five"
                android:onClick="Click"
                android:text="5"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/six"
                android:onClick="Click"
                android:text="6"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/multi"
                android:onClick="cal"
                android:text="*"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <Button
            android:id="@+id/one"
            android:onClick="Click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="1"
            android:textColor="@color/black"
            android:backgroundTint="#BCBCBC"/>
    <Button
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:id="@+id/two"
            android:onClick="Click"
            android:text="2"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#BCBCBC"/>
    <Button
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:id="@+id/three"
            android:onClick="Click"
            android:text="3"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#BCBCBC"/>
    <Button
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:id="@+id/minus"
            android:onClick="cal"
            android:text="-"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#BCBCBC"/>


</LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <Button
                android:id="@+id/dot"
                android:onClick="dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="."
                android:textColor="@color/black"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/zero"
                android:onClick="Click"
                android:text="0"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/clr"
                android:onClick="Clear"
                android:text="clr"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>
        <Button
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:id="@+id/plus"
                android:onClick="cal"
                android:text="+"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#BCBCBC"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <Button
                android:id="@+id/equal"
                android:onClick="equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="="
                android:textColor="@color/black"
                android:backgroundTint="#BCBCBC"/>
    </LinearLayout>
</LinearLayout>